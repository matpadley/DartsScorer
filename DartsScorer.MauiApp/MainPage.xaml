<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DartsScorer.MauiApp.MainPage">

    <StackLayout Padding="10">
        <Entry x:Name="ScoreEntry" Placeholder="Enter your score" Keyboard="Numeric" />
        <Button Text="Calculate Checkout" Clicked="OnCalculateCheckoutClicked" />
        <Label x:Name="CheckoutLabel" Text="Checkout will be displayed here" />
    </StackLayout>

</ContentPage>
